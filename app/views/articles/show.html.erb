<h1 class="text-center mt-4"><%= @article.title %></h1>
<div class="container">
    <div class="row justify-content-md-center ">
        <div class="col-8 mt-4">
            <div class="card text-center shadow smb-5 bg-white rounded">
                <div class="card-header">
                <i>by <%= @article.user.username if @article.user %></i>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= @article.description %></p>
                    <%= link_to 'Back', articles_path, class:"btn btn-outline-secondary" %> 
                    <% if logged_in? && ( @article.user == current_user || current_user.admin? ) %>
                        <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-outline-info " %> 
                        <%= link_to 'Delete', article_path(@article), method: :delete, data:{ confirm: "Are you sure? "}, class:"btn btn-outline-danger" %>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small> Created <%= time_ago_in_words(@article.created_at) %> ago,
                    Updated <%= time_ago_in_words(@article.updated_at) %> ago </small>
                </div>
            </div>
        </div>
    </div> 
</div>

